@model Catalog

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a asp-action="ProductsAdd">Add new product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Image
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductsGetAll())
        {
            <tr>
                <td>
                    @item.Id |
                </td>
                <td>
                    @item.Name |
                </td>
                <td>
                    @item.Description |
                </td>
                <td>
                    @item.Price |
                </td>
                <td>
                    <img src="@item.Image" alt="Product photo.">
                </td>
                <td>
                    <a asp-action="ProductDelete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
